<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LoginActivity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로케이션 헬퍼"
        android:textStyle="bold"
        android:textSize="40sp"
        android:padding="16dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"/>

    <TextView
        android:id="@+id/tv_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="앱을 둘러보세요 >"
        android:background="@drawable/bg_tv_preview"
        android:paddingVertical="10dp"
        android:paddingHorizontal="14dp"
        android:layout_below="@+id/tv_title"
        android:layout_centerHorizontal="true"/>

<!--    밑에서부터 화면배치-->
    <TextView
        android:id="@+id/tv_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:gravity="center"
        android:background="@drawable/bg_tv_login"
        android:paddingVertical="8dp"
        android:layout_marginHorizontal="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"/>

    <LinearLayout
        android:id="@+id/layout_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_tv_login"
        android:layout_marginHorizontal="80dp"
        android:layout_above="@+id/tv_sign_up"
        android:paddingVertical="8dp"
        android:gravity="center"
        android:layout_marginBottom="16dp">
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_baseline_email_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일로 로그인"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_above="@+id/layout_email"
        android:layout_marginBottom="16dp">
        <ImageView
            android:id="@+id/btn_login_kakao"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_kakao"
            android:layout_marginHorizontal="16dp"/>
        <ImageView
            android:id="@+id/btn_login_google"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_google"
            android:layout_marginHorizontal="16dp"/>
        <ImageView
            android:id="@+id/btn_login_naver"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_naver"
            android:layout_marginHorizontal="16dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_easy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_login_btn"
        android:text="간편 로그인"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"/>

</RelativeLayout>